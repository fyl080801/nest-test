{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@seed/app/(.*)": "<rootDir>/../packages/app/src/$1",
    "@seed/app": "<rootDir>/../packages/app/src"
  }
}